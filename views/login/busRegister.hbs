<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Yatra Kaha</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/assets/normalize.css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@7.33.1/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <div id="container">
        <div class="logo-register">
            <img src="/assets/yatrakaha.png" style="width: 40%;max-width: 200px;">
        </div>
        <section id="form">
            <form action="" method="post">
                <div class="inputGroup">
                    <i class="fas fa-at"></i>
                    <div class="inputField">
                        <input name="email" type="email" placeholder="aashish.jangam55@gmail.com">
                    </div>
                </div>
                <div class="inputGroup">
                    <i class="fas fa-key"></i>
                    <div class="inputField">
                        <input name="password" type="password" placeholder="Password">
                    </div>
                </div>
                <div class="inputGroup">
                    <i class="fas fa-key"></i>
                    <div class="inputField">
                        <input name="password2" type="password" placeholder="Confirm Password">
                    </div>
                </div>
                <div class="inputGroup">
                    <i class="fas fa-user-tie"></i>
                    <div class="inputField">
                        <input name="bus_number" type="text" placeholder="Bus Name">
                    </div>
                </div>
                <button class="btn btn-inverse btn-block">Register</button>
            </form>
            <div class="text-center">
                OR
            </div>
            <a href="login"><button class="btn btn-inverse btn-block">Go to Login</button></a>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.33.1/dist/sweetalert2.min.js"></script>

    <script>
        const Toast = Swal.mixin({
            toast: true,
            position: 'bottom-start',
            showConfirmButton: false,
            timer: 8000
        });
    </script>

    {{> flash}}

</body>

</html>